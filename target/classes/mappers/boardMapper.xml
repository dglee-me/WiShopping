<?xml version="1.0" encoding="UTF-8"?>

<!-- DTD 선언 -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org/DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="boardMapper">
	<select id="list" resultType="com.lee.myapp.domain.BoardVO">
		SELECT *
		  FROM BOARD
		 WHERE CATEGORY=#{cons}
		ORDER BY BNO DESC
	</select>
	
	<insert id="write" parameterType="com.lee.myapp.domain.BoardVO">
		INSERT INTO BOARD(bno,category,subject,content,author,readcount,writedate,replycount)
		VALUES(bno_seq.nextval,#{category},#{subject},#{content},#{author},#{readcount},sysdate,#{replycount})
	</insert>
	
	<select id="view" resultType="com.lee.myapp.domain.BoardVO">
		SELECT *
		FROM BOARD
		WHERE BNO=#{bno}
	</select>
	
</mapper>